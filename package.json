{
  "name": "ethereum-towers-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat --network ganache test",
    "deploy-testnet": "npx hardhat run --network ropsten scripts/deployment.js",
    "proxy-deploy-testnet": "npx hardhat run --network ropsten scripts/deployProxy.js",
    "proxy-deploy-mainnet": "npx hardhat run --network mainnet scripts/deployProxy.js",
    "deploy-mainnet": "npx hardhat run --network mainnet scripts/deployment.js",
    "generate:json": "npx hardhat run --network mainnet scripts/generateJson.js",
    "deploy-testnet-airdrop": "npx hardhat run --network rinkeby scripts/test-deployment-airdrop.js",
    "generate:files": "npx hardhat run --network mainnet scripts/generateArrays.js",
    "flatten:Tower": "npx hardhat flatten contracts/EthereumTower.sol > flattened_tower.sol --show-stack-traces",
    "flatten:Proxy": "npx hardhat flatten contracts/TowersProxy.sol > flattened_tower_proxy.sol --show-stack-traces",
    "verify-ropsten": "npx hardhat verify --constructor-args arguments.js --network ropsten",
    "verify-proxy-mainnet": "npx hardhat verify --constructor-args arguments.js --network mainnet"
  },
  "author": "Sergey Kononov",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "mocha": "^9.1.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.4.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "axios": "^0.24.0",
    "consola": "^2.15.3",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "fs": "^0.0.1-security",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "mongoose": "^6.1.3",
    "nano-ipfs-store": "^0.1.3"
  }
}
